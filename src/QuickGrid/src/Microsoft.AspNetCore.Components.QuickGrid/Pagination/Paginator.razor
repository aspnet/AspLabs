@namespace Microsoft.AspNetCore.Components.QuickGrid

<div class="paginator">
    @if (Value.TotalItemCount.HasValue)
    {
        <div class="summary">
            @if (SummaryTemplate is not null)
            {
                @SummaryTemplate
            }
            else
            {
                <text><strong>@Value.TotalItemCount</strong> items</text>
            }
        </div>
        <nav role="navigation">
            <button class="go-first" @onclick="GoFirstAsync" disabled="@(!CanGoBack)" title="@GoToFirstPageLabel" aria-title="@GoToFirstPageLabel"></button>
            <button class="go-previous" @onclick="GoPreviousAsync" disabled="@(!CanGoBack)" title="@GoToPreviousPageLabel" aria-title="@GoToPreviousPageLabel"></button>
            <div class="pagination-text">
                Page <strong>@(Value.CurrentPageIndex + 1)</strong>
                of <strong>@(Value.LastPageIndex + 1)</strong>
            </div>
            <button class="go-next" @onclick="GoNextAsync" disabled="@(!CanGoForwards)" title="@GoToNextPageLabel" aria-title="@GoToNextPageLabel"></button>
            <button class="go-last" @onclick="GoLastAsync" disabled="@(!CanGoForwards)" title="@GoToLastPageLabel" aria-title="@GoToLastPageLabel"></button>
        </nav>
    }
</div>


