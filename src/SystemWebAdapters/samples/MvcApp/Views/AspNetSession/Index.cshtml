@model MvcApp.Models.SessionDemoModel

@{
    ViewData["Title"] = "ASP.NET Session Demo";
}

<h1>ASP.NET Session Demo</h1>

<h4>Current session items</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.LabelFor(model => model.IntSessionItem, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.IntSessionItem, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IntSessionItem, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.StringSessionItem, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.StringSessionItem, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.StringSessionItem, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <button type="submit" value="Update session" class="btn esh-button esh-button-primary">Update session</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
